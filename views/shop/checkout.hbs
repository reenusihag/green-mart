<center>

    <form action="/checkout" method="post" id="checkout-form">
        <h1>Checkout</h1> &nbsp;&nbsp;&nbsp;&nbsp; <h4>${{total}}</h4>
        <h2>Address :</h2>
        <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input type="text" class="form-control " id="name" placeholder="Type Name" name="name">
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1">Alternate Number</label>
            <input type="number" class="form-control" id="number" placeholder="Number" name="number">
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1">Address</label>
            <input type="text" class="form-control" id="address" placeholder="Number" name="address">
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect2" >Payment mode</label>
            <select multiple class="form-control" id="method" name="method">
                <option >Paytm</option>
                <option >COD</option>
            </select>
        </div>



        <button type="submit" class="btn btn-primary mb-2">Confirm Order</button>

    </form>

</center>

<script type="text/javascript" src="../../public/javascripts/checkout.js"></script>