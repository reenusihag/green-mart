{{#if products}}

    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-3-offset-3 col-sm-3-offset-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge float-right">{{ this.qty}}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class="label ">â‚¹ {{ this.price }}</span>

                        <a class="btn btn-outline-warning btn-sm" href="/reduce/{{this.item._id}}" role="button">Remove by 1</a>
                        <a class="btn btn-outline-danger btn-sm" href="/remove/{{this.item._id}}" role="button">Remove all</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-sm-6 col-md-4 col-md-3-offset-3 col-sm-3-offset-3">
            <strong> Total : {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-12 col-sm-6 col-md-4 col-md-3-offset-3 col-sm-3-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>

{{else}}

    <div class="row">
        <div class="col-12 col-sm-6 col-md-4 col-md-3-offset-3 col-sm-3-offset-3">
            <h2>No Item in Cart</h2>
        </div>
    </div>

{{/if}}



